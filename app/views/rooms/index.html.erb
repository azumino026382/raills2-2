<section class="container OwnRoomsContainer">
  <h2>
    登録済み一覧
  </h2>
  <div class="table-responsive">
    <table class="table align-middle OwnRoomsTable">      
      <thead>
        <tr>
          <th>画像</th>
          <th>施設名</th>
          <th>紹介文</th>
          <th>料金</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td>
              <% if room.room_image.blank? %>
                <%= image_tag 'default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png', size: '100x80' %>
                <% else %>
                <%= image_tag room.room_image.url, size: '100x80' %>
              <% end %>
            </td>
            <td>
              <%= link_to(room.room_name, room_path(room)) %>
            </td>
            <td>
              <%= room.content %>
            </td>
            <td class="text-nowrap">
              <%= "¥#{room.price}-" %>
            </td>
            <td class="text-nowrap">
              <%= room.created_at.to_s(:datetime_jp) %>
            </td>
            <td>
             <%= button_to "削除", room_path(room), method: :delete, data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>