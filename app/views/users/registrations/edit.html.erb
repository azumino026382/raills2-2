<section class="container UserSection">
  <h2>設定</h2>

  <div class="UserContainer">
    <ul class="SideNavigation">
      <li class="SideNavigation__item ">
        <%= link_to 'アカウント', account_show_path %>
      </li>

      <li class="SideNavigation__item active">
        <%= link_to 'プロフィール', profile_show_path %>
      </li>
    </ul>

    <div class="AccountInformation">
      <ul class="TabNavigation">
        <li class="TabNavigation__item ">
          <%= link_to 'アカウント', account_show_path %>
        </li>

        <li class="TabNavigation__item active">
           <%= link_to 'プロフィール', profile_show_path %>
        </li>
      </ul>

      <div class="AccountInformation__header">
        <h3>アカウント</h3>
      </div>
      <form> 
        <%= form_with model: @user, url: {controller: 'users/registrations', action: 'update' }, local: true do |f| %>

        <%= render "shared/error", obj: @user %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    
        <div class="field">
          <%= f.label :password, "変更後パスワード" %><br />
          <%= f.email_field :password, autofocus: true %>
        </div>
    
        <div class="field">
          <%= f.label :password_confirmation, "確認用パスワード" %><br />
          <%= f.email_field :password_confirmation, autofocus: true %>
        </div>
    
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
    
        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
    
        <div class="actions">
          <%= f.submit "保存" %>
          <%= link_to "Back", :back %>
        </div>
        <% end %>
      </form>
    </div>
  </div>
    <h3>Cancel my account</h3>
    
    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
</section>
